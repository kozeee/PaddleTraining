<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <title>Paddle Subscription Search Tool</title>
</head>

<body>
    <div id="body" class="container-fluid">
        <div id="text" class="d-flex align-content-center justify-content-center">
            <h1 class="my-3">Search Subscription by ID</h1>
        </div>

        <div class="h-100 d-flex align-content-center justify-content-center">
            <div id="searchbar" class="my-3">
                <input type="text" id="search">
                <button type="button" id="searchBTN" class="btn btn-success" onclick="search()">Search</button>
            </div>
        </div>
        <table style="background-color: oldlace;" class="table table-sm table-striped my-3">
            <thead>
                <tr>
                    <th>Payment ID</th>
                    <th>Payout Date</th>
                    <th>Receipt URL</th>
                </tr>

            <tbody>
                <% if (subs !=null){subs.forEach(subs=>{ %>
                    <tr>
                        <td>
                            <%= subs.id %>
                        </td>
                        <td>
                            <%= subs.payout_date %>
                        </td>
                        <td>
                            <a href="<%= subs.receipt_url %>">
                                <%= subs.receipt_url %>
                            </a>
                        </td>
                    </tr>
                    <% })} %>
            </tbody>
            </thead>

        </table>





    </div>
    <script>
        function search() {
            let search = document.getElementById('search').value
            location.href = '/?subID=' + search
        }
    </script>
</body>

</html>
